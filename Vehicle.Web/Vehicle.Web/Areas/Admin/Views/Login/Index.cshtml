@model Vehicle.Web.Areas.Admin.Models.LoginViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/Areas/Admin/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Areas/Admin/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <div class="card ">           
            <div class="card-header text-center"><a href="../index.html"><img class="logo-img" src="~/Areas/Admin/assets/images/logo.png" alt="logo"></a><span class="splash-description">Please enter your user information.</span></div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.UserName, new { @class ="form-control", @placeholder="Username"})                        
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })                       
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                }
            </div>
        </div>
    </div>

    <script src="~/Areas/Admin/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>

</html>